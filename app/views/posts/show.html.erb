<%= @post.title %> <br>
<%= @post.content %> <br>
<br>
  <% @post.images.each do |i| %>
    <%= attachment_image_tag(i, :file, :fill, 350, 350, format: "png") %>
  <% end %>

<br>
<br>

<%= link_to "Редактировать", edit_post_path(@post) %> <br>
<%= link_to "Удалить", post_path(@post), method: :delete, data: { confirm: "Вы уверены что хотите удалить запись ?" } %>